<h1>Socket.io with Handlebars</h1>

<button onclick="enviarMensaje()">Enviar Mensaje</button>

<h2>Datos del archivo JSON:</h2>
<pre id="jsonData"></pre>

<script src="../public/test.js"></script>
<script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
<script>
    
    async function obtenerDatosJson() {
        try {
            const response = await fetch('http://localhost:8080/api/products');
            console.log(response)
            const jsonData = await response.json();
            document.getElementById('jsonData').textContent = JSON.stringify(jsonData.payload, null, 2);
        } catch (error) {
            console.error('Error al obtener datos JSON:', error);
        }
    }

    obtenerDatosJson();
    
    const socket = io.connect('http://localhost:8080');

    socket.on('connect', () => {
        console.log('Conectado al servidor');
    });

    socket.on('messageLogs', mensajes => {
        console.log('Mensajes recibidos:', mensajes);
    });
    // Realiza una solicitud al servidor para obtener los datos JSON de forma asíncrona
    // Realiza una solicitud al servidor para obtener los datos JSON de forma asíncrona

    
    function enviarMensaje() {
        const mensaje = 'Hola, esto es un mensaje desde el cliente';
        socket.emit('message', mensaje);
    }
</script>
